local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:connect(function()
   vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
   wait(1)
   vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)








local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

    local Window = Rayfield:CreateWindow({
        Name = "Rice Hub - Dragon Blox",
        LoadingTitle = "Rice Hub",
        LoadingSubtitle = "by Rice",
        ConfigurationSaving = {
            Enabled = true,
            FolderName = nil, -- Create a custom folder for your hub/game
            FileName = "Rice Hub"
        },
            Discord = {
                Enabled = false,
                Invite = "qwCV4uAGYf", -- The Discord invite code, do not include discord.gg/
                RememberJoins = true -- Set this to false to make them join the discord every time they load it up
            },
        KeySystem = false, -- Set this to true to use our key system
        KeySettings = {
            Title = "Sirius Hub",
            Subtitle = "Key System",
            Note = "Join the discord (discord.gg/sirius)",
            FileName = "SiriusKey",
            SaveKey = true,
            GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
            Key = "Hello"
        }
    })

    local Tab = Window:CreateTab("Main", 4483362458) -- Title, Image

    local Toggle = Tab:CreateToggle({
        Name = "Autoclick (dont tab out)",
        CurrentValue = false,
        Flag = "Toggle1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
        Callback = function(Value)
            getgenv().Autotap = Value

if Value then
    doTap()
end
        end,
    })

    local Toggle = Tab:CreateToggle({
        Name = "Auto Rebirth",
        CurrentValue = false,
        Flag = "Toggle2", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
        Callback = function(Value)
            getgenv().Autotap = Value

            if Value then
                dorebirth()
            end
        end,
    })


































































    function doTap()
        spawn(function()
            while getgenv().Autotap == true do
                mouse1click()
        wait(0.5)
            end
        end)
    end
    
    function dorebirth()
        spawn(function()
            while getgenv().Rebirth == true do
                game:GetService("ReplicatedStorage").Aero.AeroRemoteServices.StatsService.RebirthUp:FireServer()
                wait(0.5)
            end
        end)
    end

























